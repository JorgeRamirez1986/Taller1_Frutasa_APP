<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    tools:context=".Productos">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/aladin"
        android:text="PRODUCTOS"
        android:textColor="#FFEB3B"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="351dp"
        android:layout_height="265dp"
        android:layout_marginTop="392dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/fruteria_1" />

    <Button
        android:id="@+id/btnEditarProducto"
        android:layout_width="140dp"
        android:layout_height="138dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#FFEB3B"
        android:drawableBottom="@drawable/editar"
        android:fontFamily="@font/aladin"
        android:text="EDITAR"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnAgregarProducto"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btnAgregarProducto"
        android:layout_width="145dp"
        android:layout_height="144dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#FFEB3B"
        android:drawableBottom="@drawable/agregar_prod"
        android:fontFamily="@font/aladin"
        android:text="AGREGAR"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btnEditarProducto"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:strokeColor="#FFEB3B" />

    <Button
        android:id="@+id/btnEliminarProducto"
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#FFEB3B"
        android:drawableBottom="@drawable/eliminar"
        android:fontFamily="@font/aladin"
        android:text="ELIMINAR"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btnConsultarProducto"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAgregarProducto" />

    <Button
        android:id="@+id/btnConsultarProducto"
        android:layout_width="134dp"
        android:layout_height="143dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#FFEB3B"
        android:drawableBottom="@drawable/consultar"
        android:fontFamily="@font/aladin"
        android:text="CONSULTAR"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnEliminarProducto"
        app:layout_constraintTop_toBottomOf="@+id/btnEditarProducto" />

</androidx.constraintlayout.widget.ConstraintLayout>